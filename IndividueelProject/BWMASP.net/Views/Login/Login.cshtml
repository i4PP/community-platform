@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container w-75">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Login</h1>
            @if (TempData["Error"] != null)
            {
                <p class="text-danger">@TempData["Error"]</p>
            }
            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label for="User" class="form-label">Name or Email</label>
                    <input asp-for="User" class="form-control" id="User" type="text"/>
                    <span asp-validation-for="User" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" id="Password" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a class="btn btn-link" asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</div>